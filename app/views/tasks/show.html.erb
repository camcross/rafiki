
<div class = "surround-upper-content">

	<h1>Enrollment Page: <%= @task.name %></h1>
	<strong><h4>Description: </h4></strong>
	<%= @task.description %>
	<strong><h4>Read About It</h4></strong>
	<% @task.guide.body.split(" ").each do |link|%>
	<%= link_to link, link %>
	<br/>
	<% end %>
	<strong><h4>Practice</h4></strong>
	<% @task.guide.practice.split(" ").each do |link|%>
	<%= link_to link, link %>
	<br/>
	<% end %>
</div>
	<div class = "course-header">
		<a class="test-button" href="#take_test">Take Test</a>
	</div>


<div class="take_test_view" id="take_test">

	<br/>
	<%= @task.test.body %>
	<br/><br/>
	<%= form_tag "/tests/check" do %>
	<input type="hidden" name="task_id" value=<%= params[:id] %> >

	<ol>
		<% @task.test.questions.each do |question| %>
		<li><%= question.body %></li>
		<div class="questions">
			<% question.options.each_with_index do |option, index| %>
			<input type="radio" name=<%= "question#{question.id}" %> value="<%= @options[index] %>" class="answers">
			<%= @options[index] + ") " + option.body %>
			<br/>
			<% end %>
		</div>
		<% end %>
	</ol>
	<input type="submit" name="Submit" value="Submit">
	<% end %>
</div>

